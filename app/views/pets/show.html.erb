<p id="notice"><%= notice %></p>
<h1> <%= @pet.name %> </h1>
<center>
  <%= render 'layouts/actions' %>
  <br>

  <% case @pet.state %>
    <% when 1 %>
      <% state = "-skinny" %>
    <% when 2 %>
      <% state = "" %>
    <% when 3 %>
      <% state = "-fat" %>
    <% else %>
      <% puts "error - state corruption" %>
    <% end %>

    <center>
      <% if @pet.sleep == 1 %>
        <%= image_tag 'sleeping#{state}.gif' %>
      <% elsif @pet.exercise == 1 %>
        <%= image_tag 'workingout#{state}.gif' %>
      <% else %>
        <%= image_tag 'pikachu#{state}.gif' %>
      <% end %>
    </center>


  <p>Placeholder image</p>
  <div>
  <%= image_tag 'pikachu.gif' %>
  </div>

  <br>

  <table>
    <tr class="list-group">
      <th class="list-group-item">Name:
        <%= @pet.name %></td>
      <th class="list-group-item"> Is Alive:
        <%= @pet.alive %></th>
      <th class="list-group-item"> Date of Death:
        <%= @pet.date_of_death %></th>
      <th class="list-group-item"> User:
        <%= @pet.user_id %></th>
      </tr>
  </table>

  <br>

    <button class="btn-default">
      <%= link_to 'Back', pets_path %>
    </button> |

    <button class="btn-default">
      <%= link_to 'Edit', edit_pet_path(@pet) %>
    </button>
</center>
