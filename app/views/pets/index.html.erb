<p id="notice"><%= notice %></p>

<h1>Pets</h1>
<center>
      <% @pets.each do |pet| %>
      <%= render 'layouts/pet_state', character: pet %>
      <table>
        <tr class="list-group">
        <th class="list-group-item">
          Name: <%= pet.name %>
          <% if pet.alive == true %>
            <span class="label label-default-2">Alive</span>
          <% else %>
            <span class="label label-default-1">Dead</span>
          <% end %>
        </th>
          <% if pet.alive == false %>
            <th class="list-group-item"> Date of Death: <%= pet.date_of_death %></th>
          <% end %>
        </tr>
      </table>
<button class="btn-default">
  <%= link_to 'View Pet', pet %>
</button>
<button class="btn-default">
  <%= link_to 'Edit Name', edit_pet_path(pet) %>
</button>
<button class="btn-default">
  <%= link_to 'Delete Pet', pet, method: :delete,
  data: { confirm: 'Are you sure?' } %>
</button>
<br>
<% end %>
<%= yield %>

<br>
<button class="btn-default" style="margin-bottom: 20px">
  <%= link_to 'Back', home_index_path %>
</button>
<button class="btn-info" style="margin-bottom: 20px">
<%= link_to 'New Pet', new_pet_path %>
</button>
</center>
